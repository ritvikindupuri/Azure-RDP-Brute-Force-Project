{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Log Analytics workspace."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "apiVersion": "2021-10-01-preview",
      "name": "[concat(parameters('workspaceName'), '/Microsoft.SecurityInsights/01a1a1a1-2b2b-3c3c-4d4d-05e5e5e5e5e5')]", // Replace with a unique GUID
      "kind": "Scheduled",
      "properties": {
        "displayName": "RDP Brute Force Detection",
        "description": "This rule identifies potential RDP brute force attacks by detecting multiple failed sign-in attempts from a single source IP in a short timeframe.",
        "severity": "Medium",
        "enabled": true,
        "query": "SecurityEvent\n| where EventID == 4625\n| summarize count() by IpAddress, bin(TimeGenerated, 10m)\n| where count_ > 5\n",
        "queryFrequency": "PT15M",
        "queryPeriod": "PT15M",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0,
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [
          "CredentialAccess",
          "PrivilegeEscalation"
        ],
        "techniques": [
          "T1110"
        ]
      }
    }
  ]
}
